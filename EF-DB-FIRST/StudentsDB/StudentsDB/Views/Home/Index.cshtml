@model IEnumerable<StudentsDB.Models.DB.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.Label("Search", new { @class = "control-label col-md-2" });
        @Html.TextBox("searchterm", null, new { @class = "control-label col-md-8 form-control" });
        <input type="submit" value="Search" class="btn btn-default" />
    }

</div>
<p>
    @Html.ActionLink("Create New", "NewStudent")
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    <a href="@Url.Action("UpdateStudent","Home" , new { id = item.StudentId })"><i class="fas fa-edit"></i></a> |
                    <a href="@Url.Action( "DeleteStudent", "Home", new { id = item.StudentId })">Delete</a>

                </td>
                @*<td>

                    @Html.ActionLink("Edit", "UpdateStudent", new { id = item.StudentId }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new { id = item.StudentId })
                </td>*@
            </tr>
        }

    </table>

}
else {
<div class="bg-primary">
    <p>No record found.</p>
</div>
}